#!/bin/bash

# NOTE: 
# This script will install nvim from package since
# the distributed apt package isn't under maintainance
# any more.

# install nvim
curl -LO https://github.com/neovim/neovim/releases/latest/download/nvim-linux64.tar.gz
sudo rm -rf /opt/nvim
sudo tar -C /opt -xzf nvim-linux64.tar.gz

# install configuration
mkdir -p "$HOME/.config/nvim"
cp -r "$HOME/projects/wsl/config/nvim" "$HOME/.config"
