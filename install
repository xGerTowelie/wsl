#!/bin/bash

# install packages
sudo apt install -y \
  zsh
  build-essential

# symlink dotfiles
# ln -s org link
ln -s dotfiles/.zshrc ~/.zshrc
ln -s dotfiles/.p10k.zsh ~/.p10k.zsh

# install packages from source
# fzf  ./scripts/install-fzf
# nvim ./scripts/install-nvim

# setup git
git config --global user.name "Towelie"
git config --global user.email "marcelmaier1996@outlook.de"
git config --global init.defaultBranch "main"
git config --global pull.rebase false
git config --global core.editor "nvim"

# change shell to zsh
sudo chsh $USER -s /bin/zsh
